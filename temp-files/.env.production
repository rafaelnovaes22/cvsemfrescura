# CV Sem Frescura - Produção Environment Variables
# ⚠️ COPIE PARA .env ANTES DE USAR EM PRODUÇÃO ⚠️

# Database Configuration (Production)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cv_sem_frescura_prod
DB_USER=cvuser_prod
DB_PASSWORD=your_super_secure_password_here

# JWT Configuration (Production)
JWT_SECRET=your_super_secure_jwt_secret_256_bits_minimum
JWT_EXPIRY=7d

# Stripe Configuration (Production)
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here

# OpenAI Configuration (Production)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Environment
NODE_ENV=production

# URLs (Production)
FRONTEND_URL=https://cvsemfrescura.com.br
BACKEND_URL=https://cvsemfrescura.com.br

# Security
CORS_ORIGIN=https://cvsemfrescura.com.br
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (opcional)
# SENTRY_DSN=your_sentry_dsn_here
# NEW_RELIC_LICENSE_KEY=your_newrelic_key_here

# Backup (opcional)
# BACKUP_FREQUENCY=daily
